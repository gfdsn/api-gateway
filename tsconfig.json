{
    "compilerOptions": {
        "target": "ES2022", // ECMAScript 2022
        "module": "nodenext", // tells ts to run ECM as node does
        "moduleResolution": "nodenext", // tells ts to run ECM as node does
        "rootDir": "src", // base dir
        "outDir": "dist", // output dir
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}